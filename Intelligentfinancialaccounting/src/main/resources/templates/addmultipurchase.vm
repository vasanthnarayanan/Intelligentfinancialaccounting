<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
<title>Add Purchase Details</title>
<style type="text/css">@import "/css/jquery-ui.css";</style>
<link href="/css/bootstrap.min.css" rel="stylesheet">
<link href="/css/ifas/ifas.css" rel="stylesheet">
<style type="text/css">
.otherdateclass,.help-block {
  display: none;
}
.autocomplete-suggestions {
  border: 1px solid #999;
  background: #FFF;
  overflow: auto;
}

.autocomplete-suggestion {
  padding: 2px 5px;
  white-space: nowrap;
  overflow: hidden;
}

.autocomplete-selected {
  background: #F0F0F0;
}

.autocomplete-suggestions strong {
  font-weight: normal;
  color: #3399FF;
}

.autocomplete-group {
  padding: 2px 5px;
}

.autocomplete-group strong {
  display: block;
  border-bottom: 1px solid #000;
}
</style>
<script src="/js/jquery.latest.min.js"></script>
<script src="/js/jquery.autocomplete.js"></script>
<script src="/js/jquery-ui.js"></script>
<script src="/js/bootstrap.min.js"></script>
<script type="text/javascript">
var cflag=0;
var iflag=0;
var customerName;
var customerId;
$(function(){
customerName = $('#customernameid');
customerId = $('#customeridid');
var max_rows = 10; // maximum record rows allowed
  var initial = 1; // initial rows
  var wrapper = $('#multirowwrapper');
  var add_button = $('#addMoreRow');
  // dynamically add and remove rows
  $(add_button).click(function(e) { //on add input button click
    e.preventDefault();
    if (initial < max_rows) { //max input box allowed
      $(wrapper).append('<div class="form-group">' + '<div class="col-sm-2 seldatewrapper">' + '<select class="form-control seldateclass" name="records[' + initial + '].purchaseDate">' + '<option value="today">Today</option>' + '<option value="yesterday">Yesterday</option>' + '<option value="others">Others</option>' + '</select>' + '</div>' + '<div class="col-sm-2 otherdateclass"><input type="text" class="form-control pickdateclass" name="records[' + initial + '].purchaseDate" disabled="disabled" /></div>' + '<div class="col-sm-3">' + '<input type="text" class="form-control itemnameclass" name="itemname" placeholder="Item Name" required="true" size="30" />'+'<input type="hidden" class="itemidclass" name="records[' + initial + '].purchaseItemId" />' + '<span class="help-block text-uppercase"><small>Item information placeholder</small></span>'+'</div>' + '<div class="col-sm-2">' + '<input type="number" class="form-control piecesclass" name="records[' + initial + '].purchasePieces" placeholder="Pieces" required="true" size="30"/>' + '</div>' + '<div class="col-sm-2">' + '<input type="number" step="any" class="form-control costclass" name="records[' + initial + '].purchaseCost" placeholder="Cost" required="true" size="30"/>' + '</div>'+ '<div class="col-sm-2">' + '<input type="text" class="form-control remarksclass" name="records[' + initial + '].purchaseRemarks" placeholder="Remarks" size="30"/>' + '</div>' + '<div class="col-sm-1">' + '<a href="#" class="glyphicon glyphicon-minus remove_row"></a>' + '</div>' + '</div>'); //add input box
      initial++; //row increment
      initiateactions();
    } else {
      alert("Max rows exceeded");
    }
  });

  $('body').on('click', '.remove_row', function(e) {
    //user click on remove text
    e.preventDefault();
    $(this).closest('.form-group').remove();
    initial--;
  });
  // end dynamic add and remove row
  initiateactions();
  });

function initiateactions(){
/**--Start of datepick--**/
	$('.seldateclass').bind('change', function() {
    var seldateclass = this;
    var seldatewrapper = $(seldateclass).parent();
    var otherdateclass = $(seldatewrapper).parent().find('.otherdateclass');
    if ($(seldateclass).val().trim() === 'others') {
      $(seldateclass).prop('disabled', true);
      $(seldatewrapper).hide();
      $(otherdateclass).show();
      var pickdateclass = $(otherdateclass).find('.pickdateclass');
      $(pickdateclass).prop('disabled', false);
      $(pickdateclass).prop('readonly', true);
      $(pickdateclass).datepicker({
        dateFormat: 'dd/mm/yy',
        showButtonPanel: true,
        beforeShow: function(input) {
          setTimeout(function() {
            var buttonPane = $(input)
              .datepicker("widget")
              .find(".ui-datepicker-buttonpane");

            $("<button>", {
              text: "Clear",
              click: function() {
                //Code to clear your date field (text box, read only field etc.) I had to remove the line below and add custom code here
                $.datepicker._clearDate(input);
              }
            }).appendTo(buttonPane).addClass("ui-datepicker-clear ui-state-default ui-priority-primary ui-corner-all");
          }, 1)
        },
        onChangeMonthYear: function(year, month, instance) {
          setTimeout(function() {
            var buttonPane = $(instance)
              .datepicker("widget")
              .find(".ui-datepicker-buttonpane");

            $("<button>", {
              text: "Clear",
              click: function() {
                //Code to clear your date field (text box, read only field etc.) I had to remove the line below and add custom code here
                $.datepicker._clearDate(instance.input);
              }
            }).appendTo(buttonPane).addClass("ui-datepicker-clear ui-state-default ui-priority-primary ui-corner-all");
          }, 1);
        },
        onClose: function(selectedDate) {
          if (selectedDate.length == 0) {
            $(seldatewrapper).show();
            $(seldateclass).prop('disabled', false).val("today");
            $(pickdateclass).prop('readonly', false);
            $(pickdateclass).prop('disabled', true);
            $(otherdateclass).hide();
          }
        }
      });
      $(pickdateclass).focus();
    }
  });
  /**--End of datepick--**/
  	$(customerName).devbridgeAutocomplete({
	    	serviceUrl:'/listCustomersLike',
	    	minChars:1,
	    	noCache:true,
	    	onSearchStart: function(query){
	    	cflag=0;
			$(customerName).closest('.form-group').removeClass('has-success');
			$(customerName).closest('.form-group').addClass('has-error');
			$(customerName).parent().find('.help-block').show();
	    	$(customerId).val('');
	    	},
	    	onSelect: function (suggestion){
	    	cflag=1;
			$(customerName).parent().find('.help-block').hide();
			$(customerName).closest('.form-group').removeClass('has-error');
			$(customerName).closest('.form-group').addClass('has-success');
	    	$(customerId).val(suggestion.data);
	    	}
	    });
	    $('.itemnameclass').devbridgeAutocomplete({
	    	serviceUrl:'/listItemsLike',
	    	minChars:1,
	    	noCache:true,
	    	onSearchStart: function(query){
	    	iflag =0;
	    	$(this).closest('.form-group').removeClass('has-success');
			$(this).closest('.form-group').addClass('has-error');
	    	$(this).parent().find('.itemidclass').val('');
	    	$(this).closest('.form-group').find('.costclass').val('');
	    	$(this).parent().find('.help-block').show();
	    	$(this).parent().find('.help-block').html('<small>Invalid Item</small>');
	    	},
	    	onSelect: function (suggestion){
	    	iflag =1;
			$(this).closest('.form-group').removeClass('has-error');
			$(this).closest('.form-group').addClass('has-success');
	    	$(this).parent().find('.itemidclass').val(suggestion.data[0].itemId);
	    	$(this).parent().find('.help-block').show();
	    	$(this).parent().find('.help-block').html('<small>'+suggestion.data[0].quantity+' kg  '+suggestion.data[0].type+'</small>');
		    $(this).closest('.form-group').find('.costclass').val(suggestion.data[0].cost);
	    	}
	    });
	    
	    $('#addpurchase').submit(function(event){
		if(iflag==0||cflag==0)
			{
			event.preventDefault()
			}
		});
}
</script>
</head>
<body id="transaction">
#parse("mainnavigation.vm")
<div id="contentcontainer" class="container-fluid">
  <div class="row">
    <div id="sidenavigation" class="col-sm-3">
      <div class="list-group">
        <a href="/addTransaction" class="list-group-item">Add Transaction</a>
        <a href="/showSalesSheet" class="list-group-item">Sales Sheet</a>
        <a href="/showPurchaseSheet" class="list-group-item">Purchase Sheet</a>
        <a href="/showFaultSheet" class="list-group-item">Fault Sheet</a>
      </div>
    </div>
    <div id="content" class="col-sm-9">

      <form id="addpurchase" class="form-horizontal" action="/addMultiPurchase" method="post">

        <fieldset>
          <legend>Purchase Information</legend>
          <div class="form-group">
            <div class='col-sm-10'>
              <label id="customernamelabel" class="control-label" for="customername">Customer name</label>
              <input class="form-control" id="customernameid" name="purchaseCustomerName" placeholder="Customer Name" required="true" size="30" type="text" />
              <input type="hidden" id="customeridid" name="purchaseCustomerId"/>
              <span class="help-block text-uppercase"><small>Invalid Customer</small></span>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2">Date</label>
            <label class="col-sm-3">Item Name</label>
            <label class="col-sm-2">Pieces</label>
            <label class="col-sm-2">Cost</label>
            <label class="col-sm-2">Remarks</label>
          </div>
          <div id="multirowwrapper">
            <div class="form-group">
              <div class="col-sm-2 seldatewrapper">
                <select class="form-control seldateclass" name="records[0].purchaseDate">
                  <option value="today">Today</option>
                  <option value="yesterday">Yesterday</option>
                  <option value="others">Others</option>
                </select>
              </div>
              <div class="col-sm-2 otherdateclass">
                <input type="text" class="form-control pickdateclass" name="records[0].purchaseDate" disabled="disabled" />
              </div>
              <div class="col-sm-3">
                <input type="text" class="form-control itemnameclass" name="itemname" placeholder="Item Name" required="true" size="30" />
                <input type="hidden" class="itemidclass" name="records[0].purchaseItemId" />
                 <span class="help-block text-uppercase"><small>Item information placeholder</small></span>
              </div>
              <div class="col-sm-2">
                <input type="number" class="form-control piecesclass" name="records[0].purchasePieces" placeholder="Pieces" required="true" size="30" />
              </div>
              <div class="col-sm-2">
                <input type="number" step="any" class="form-control costclass" name="records[0].purchaseCost" placeholder="Cost" required="true" size="30" />
              </div>
              <div class="col-sm-2">
                <input type="text" class="form-control remarksclass" name="records[0].purchaseRemarks" placeholder="Remarks" size="30" />
              </div>
              <div class="col-sm-1">
                <a href="#" id="addMoreRow" class="glyphicon glyphicon-plus"></a>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
              <input type="submit" class="btn btn-primary" value="Submit">
              <input type="reset" class="btn btn-default" value="Reset">
            </div>
          </div>

        </fieldset>

      </form>
    </div>
  </div>
</div>
</body>
</html>